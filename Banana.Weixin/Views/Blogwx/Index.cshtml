@{
    ViewBag.Title = "工作日志";
}
@section head{
    @Styles.Render("~/Scripts/weixin/Blog/css/weui.css")
    @Scripts.Render("~/Scripts/weixin/Blog/zepto.min.js","~/Scripts/weixin/Blog/router.min.js",  "~/Scripts/weixin/Blog/wxblog.js")
}
<form>
    <div class="weui_cells weui_cells_form">
        <div class="weui_cell">
            <div class="weui_cell_hd"><label for="" class="weui_label">日志日期</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                 <input name="blogDate" class="weui_input" type="date" value=""/>
            </div>
        </div>
        <div class="weui_cell">
            <div class="weui_cell_hd"><label for="" class="weui_label">开始时间</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                <input name="beginTime" class="weui_input" type="time" value="" />
            </div>
        </div>
        <div class="weui_cell">
            <div class="weui_cell_hd"><label for="" class="weui_label">结束时间</label></div>
            <div class="weui_cell_bd weui_cell_primary">
                <input name="endTime" class="weui_input" type="time" value="" />
            </div>
        </div>
    </div>
   
    <div class="weui_cells_title">选择项目</div>
    <div class="weui_cells">
        <div class="weui_cell weui_cell_select">
            <div class="weui_cell_bd weui_cell_primary">
                <select class="weui_select" name="projectID">
                    <option selected="" value="1">项目一</option>
                    <option value="2">项目二</option>
                    <option value="3">项目三</option>
                </select>
            </div>
        </div>
    </div>


<div class="weui_cells weui_cells_form">
        <div class="weui_cell">
            <div class="weui_cell_bd weui_cell_primary">
                <textarea name="blogContent" class="weui_textarea" placeholder="日志内容最少25字" rows="3"></textarea>
                <div class="weui_textarea_counter"><span>0</span>/200</div>
            </div>
        </div>
    </div>

</form>
<div class="weui_btn_area">
    <a class="weui_btn weui_btn_primary" href="javascript:" id="showTooltips">提交</a>
</div>
<div class="weui_toptips weui_warn js_tooltips">格式不对</div>
<!--BEGIN toast-->
<div id="toast" style="display: none;">
    <div class="weui_mask_transparent"></div>
    <div class="weui_toast">
        <i class="weui_icon_toast"></i>
        <p class="weui_toast_content">提交成功</p>
    </div>
</div>
<!--end toast-->